{
  "MONGODB": {
    "service": [],
    "MONGODB_MASTER": [
      {
        "name": "mongodb_master",
        "label": "MongoDB Master Process",
        "description": "This host-level alert is triggered if the MongoDB Master cannot be determined to be up.",
        "interval": 1,
        "scope": "HOST",
        "source": {
          "type": "PORT",
          "uri": "{{mongodb/tcp_port}}",
          "default_port": 27017,
          "reporting": {
            "ok": {
              "text": "TCP OK - {0:.3f}s response on port {1}"
            },
            "warning": {
              "text": "TCP OK - {0:.3f}s response on port {1}",
              "value": 1.5
            },
            "critical": {
              "text": "Connection failed: {0} to {1}:{2}",
              "value": 5.0
            }
          }
        }
      }
    ]
  }
}
